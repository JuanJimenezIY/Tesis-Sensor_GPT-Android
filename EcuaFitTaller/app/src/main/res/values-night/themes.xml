<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcuaFit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">#000000</item>

        <item name="colorPrimary">@color/card_detail</item>


        <item name="android:secondaryProgress">@color/black</item>
        <item name="cardViewStyle">@style/CustomCardView</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>

    </style>
    <style name="titulos" >

        <item name="android:textColor">@color/color_secundario</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>


    </style>
    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/card_detail</item>

    </style>
    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>

    </style>

    <style name="activeIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/color_boton</item>

    </style>
    <style name="customMenuBackground" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/selector_color</item>

    </style>

    <style name="loginTextTitle" >


        <item name="android:textColor">@color/card_special</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="hintText" >

        <item name="hintTextColor">@color/card_special</item>
        <item name="android:textColorHint">@color/card_special</item>
        <item name="hintAnimationEnabled">true
        </item>
        <item name="android:labelTextSize">17sp</item>

    </style>
    <style name="CustomSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/background_ej</item>
        <item name="android:textColor">@color/card_special</item>
    </style>
</resources>