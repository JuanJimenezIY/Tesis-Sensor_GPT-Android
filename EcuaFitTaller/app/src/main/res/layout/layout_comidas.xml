<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/principal_color_ej">

    <androidx.cardview.widget.CardView
        android:id="@id/pesoCard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/card_background"

        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="210dp"
                android:layout_marginVertical="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"

                android:orientation="vertical">
            <TextView
                android:id="@+id/nombreComida"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left|center"
                android:text="Hornado"
                android:textStyle="bold"
                android:textColor="@color/color_complementario"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cantidad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"

                android:text="PorciÃ³n: 1"
                android:textColor="@color/color_complementario"
                android:textSize="18sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/caloriasComida"
                android:layout_width="60dp"
                android:layout_height="match_parent"

                android:gravity="left|center"
                android:text="888 kcal"
                android:textColor="@color/color_complementario"
                android:textSize="18sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addComida"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:backgroundTint="@color/color_boton"
                android:layout_gravity="center"

                android:src="@drawable/baseline_add_24"

                android:tintMode="@color/card_detail">

            </com.google.android.material.floatingactionbutton.FloatingActionButton>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>